
- if @restaurants.any?
  - @restaurants.each do |restaurant|
    = link_to restaurant.name, restaurant_path(restaurant)
    - if @user
      - if @user.restaurants.include?(restaurant)
        = link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
        = link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
      = link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)
    - restaurant.reviews.each do |review|
      %p= review.user.email
      %p= review.thoughts
      - if @user
        - if @user.reviews.include?(review)
          %p= link_to "Delete review", restaurant_review_path(restaurant,review), method: :delete
- else
  %h1 No restaurants yet!

%a(href='/restaurants/new') Add a restaurant
